<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="BagitRepositoryConfigView" parent="GtkBox">
    <property name="width-request">400</property>
    <property name="orientation">vertical</property>
    <property name="vexpand">True</property>
    <property name="hexpand">True</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">true</property>
        <child>
          <object class="AdwClamp">
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">8</property>
                <property name="margin-end">8</property>
                <property name="spacing">24</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">4</property>
                    <child>
                      <object class="GtkLabel">
                        <style>
                          <class name="title-1"/>
                        </style>
                        <property name="label" translatable="yes">_Repository config</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="margin-top">10</property>
                    <property name="margin-bottom">10</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="halign">start</property>
                        <style>
                          <class name="title-2"/>
                        </style>
                        <property name="label" translatable="yes">_Remote repository URL</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox">
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <child>
                          <object class="AdwEntryRow" id="repo_url_row">
                            <property name="title" translatable="yes">_Remote repository URL</property>
                            <signal name="changed" handler="remote_url_changed" swapped="true"/>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="halign">start</property>
                        <style>
                          <class name="title-2"/>
                        </style>
                        <property name="label" translatable="yes">_Repository profile</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <child>
                          <object class="AdwExpanderRow" id="git_profiles">
                            <property name="title" translatable="yes">_No profile</property>
                            <child type="prefix">
                              <object class="GtkRevealer" id="selected_profile_revealer">
                                <property name="transition-type">crossfade</property>
                                <property name="child">
                                  <object class="GtkButton">
                                    <property name="icon-name">view-reveal-symbolic</property>
                                    <property name="margin-top">10</property>
                                    <property name="margin-bottom">10</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                    <signal name="clicked" handler="show_profile_information" swapped="true"/>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkListBox" id="profiles_list">
                                <signal name="row-selected" handler="row_clicked" swapped="true"/>
                                <style>
                                  <class name="navigation-sidebar"/>
                                </style>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="child">
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">_No profile</property>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
